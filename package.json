{
  "name": "godaddy-test-tools",
  "version": "17.0.0",
  "description": "Gulp tools for simplifying the testing of node libraries with mocha and istanbul",
  "main": "index.js",
  "scripts": {
    "lint": "gulp lint",
    "test": "npm run lint",
    "postshrinkwrap": "gulp shrinkwrap --shrinkwrap.onlyFormat"
  },
  "pre-commit": {
    "run": [
      "lint"
    ]
  },
  "pre-push": {
    "run": [
      "test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/godaddy/godaddy-test-tools"
  },
  "keywords": [
    "gulp",
    "test"
  ],
  "author": "GoDaddy",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "acorn": "^6.4.2",
    "cross-spawn": "^7.0.1",
    "eslint": "^6.8.0",
    "eslint-config-godaddy": "^5.0.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-mocha": "^6.2.2",
    "gulp": "^4.0.2",
    "mocha": "^8.3.2",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1"
  },
  "peerDependencies": {
    "gulp": "^4.0.0",
    "mocha": "*"
  },
  "dependencies": {
    "del": "^5.1.0",
    "fancy-log": "^1.3.3",
    "gulp-eslint": "^6.0.0",
    "gulp-sonar2": "^3.1.2",
    "lodash": "^4.17.21",
    "mkdirp": "^0.5.1",
    "mocha-junit-reporter": "^1.23.3",
    "node-notifier": "^5.4.3",
    "one-time": "^1.0.0",
    "rimraf": "^2.7.1",
    "through2": "^3.0.1",
    "yargs": "^16.2.0"
  }
}
