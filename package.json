{
  "name": "godaddy-test-tools",
  "version": "13.1.0",
  "description": "Gulp tools for simplifying the testing of node libraries with mocha and istanbul",
  "main": "index.js",
  "scripts": {
    "lint": "gulp lint",
    "test": "npm run lint",
    "postshrinkwrap": "gulp shrinkwrap --shrinkwrap.onlyFormat"
  },
  "pre-commit": {
    "run": [
      "lint"
    ]
  },
  "pre-push": {
    "run": [
      "test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/godaddy/godaddy-test-tools"
  },
  "keywords": [
    "gulp",
    "test"
  ],
  "author": "GoDaddy",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-godaddy": "^3.1.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-mocha": "^5.3.0",
    "gulp": "^4.0.2",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1"
  },
  "peerDependencies": {
    "gulp": "^4.0.0"
  },
  "dependencies": {
    "del": "^5.0.0",
    "fancy-log": "^1.3.3",
    "gulp-eslint": "^6.0.0",
    "gulp-mocha": "^6.0.0",
    "gulp-sonar2": "^3.1.2",
    "lodash": "^4.17.14",
    "mkdirp": "^0.5.1",
    "mocha-junit-reporter": "^1.23.0",
    "node-notifier": "^5.4.0",
    "one-time": "^1.0.0",
    "rimraf": "^2.6.3",
    "through2": "^3.0.1",
    "yargs": "^13.2.4"
  }
}
